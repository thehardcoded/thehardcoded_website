<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>hardcoded</title>
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/post.css">
    <link rel="stylesheet" href="/styles/footer.css">

    <script src="https://kit.fontawesome.com/4fb9d56898.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
    <div id="blogs_page">
        <div class="card">
            <%- include('partials/navbar')%>
                <div class="main_section">
                    <div class="main_content">
                        <div class="post_section">
                            <div class="post_meta">
                                <h1 class="post_title">
                                    
                                        <%=article.data.title%>
                                    
                                </h1>
                                <img class="mainimage" src="<%=article.data.mainimage%>" alt="astronaut">

                            </div>
                            <div class="post_content">
                                <%- post %>
                                    <div class="post_pub_cont">
                                        <span class="post_published">
                                            Posted by:
                                            <%=article.data.author%>
                                        </span>
                                        <span class="post_published" style="color: #ed7014;">
                                            <%=article.data.date%>
                                        </span>
                                    </div>
                                    <div class="tags">
                                        Tags:
                                        <% article.data.tags.forEach(tag=> { %>
                                            <p class="tagbox">
                                                <%=tag%>
                                            </p>
                                            <% }) %>
                                    </div>

                            </div>


                        </div>

                        <%- include('partials/footer')%>

                    </div>

                </div>
        </div>
    </div>


    <script src="/scripts/index.js"></script>
    <script src="/scripts/navbar.js"></script>
</body>

</html>