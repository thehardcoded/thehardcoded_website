<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>hardcoded</title>
    <link rel="stylesheet" href="styles/navbar.css">
    <link rel="stylesheet" href="styles/blogs.css">
    <link rel="stylesheet" href="styles/footer.css">
    <script src="https://kit.fontawesome.com/4fb9d56898.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>

    <div id="blogs_page">
        <div class="card">
            <%- include('partials/navbar')%>
                <div class="main_section">
                    <div class="main_content">
                        <div class="blog_section">
                            <% allblogs.forEach(blog=> { %>
                                <div class="lpcard reveal">
                                    <div class="lplink">
                                        <a href="/blog/<%=blog.data.metatitle%>">
                                            <div class="lpimage">
                                                <img src="<%=blog.data.mainimage%>" alt="">
                                            </div>
                                        </a>
                                    </div>
                                    <h2 class="lpcategory">
                                        <%=blog.data.categories%>
                                    </h2>
                                    <a href="/blog/<%=blog.data.metatitle%>" class="lpdescriptionlink">
                                        <h1 class="lpdescription">
                                            <%=blog.data.title%>
                                        </h1>
                                    </a>

                                    <div class="lpdate_author">
                                        <p class="date">
                                            <%=blog.data.date%>
                                        </p>
                                        <p class="author">
                                            <%=blog.data.author%>
                                        </p>
                                    </div>

                                </div>

                                <% }) %>
                        </div>
                        <%- include('partials/footer')%>
                    </div>

                </div>
        </div>
    </div>

    <script src="/scripts/navbar.js"></script>
    <script src="/scripts/index.js"></script>
    
</body>

</html>